<!-- Modal -->
<div class="modal fade" id="exampleModal{{ entity.ID }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" {% if(theme == "dark") %}
            style="background-color:#232425"
        {% endif %}
        >
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Demande de Confirmations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                ÃŠtes vous sur de vouloir supprimer : <br><br>
                <span>{{ entity.ID }} - {% if(entity.prenom) %} {{ entity.prenom }} {% endif %} {{ entity.nom }}</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button"
                        onclick="location.href =
                                {% if(entity.prenom) %}
                                'deletePersonne/{{ entity.ID }}'"
                                {% else %}
                                'deleteEpreuve/{{ entity.ID }}'"
                                {% endif %}
                        class="btn btn-danger">
                    Supprimer
                </button>
            </div>
        </div>
    </div>
</div>